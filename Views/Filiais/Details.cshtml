@model ASP.NET_Web_Application.Models.Filial

@{
    ViewBag.Title = "Details";
}

<h1 class="tex-tacos" style="margin: 1em 0em 0em 0em">Detalhes da Filial</h1>
<hr />

<div class="container form-edit-prato">
    <div class="row" style="margin: 0em 0em 4em 0em">
        <div class="col-md-12">
            <ul class="list-group">

                <li class="list-group-item">
                    <h4>
                        <b>IDENTIFICADOR:</b>
                        @Html.DisplayFor(model => model.id)
                    </h4>
                </li>

                <li class="list-group-item">
                    <h4>
                        <b>NOME:</b>
                        @Html.DisplayFor(model => model.nome)
                    </h4>
                </li>

                <li class="list-group-item">
                    <h4>
                        <b>CEP:</b>
                        @Html.DisplayFor(model => model.cep)
                    </h4>
                </li>

                <li class="list-group-item">
                    <h4>
                        <b>LOGRADOURO:</b>
                        @Html.DisplayFor(model => model.logradouro)
                    </h4>
                </li>

                <li class="list-group-item">
                    <h4>
                        <b>BAIRRO:</b>
                        @Html.DisplayFor(model => model.bairro)
                    </h4>
                </li>
                <li class="list-group-item">
                    <h4>
                        <b>UF:</b>
                        @Html.DisplayFor(model => model.uf)
                    </h4>
                </li>
            </ul>
        </div>
        <div class="form-group" style="margin: 2em 0em 0em 1em">
            <div>
                @Html.ActionLink("Editar", "Edit", new { id = Model.id }, htmlAttributes: new { @class = "btn btn-tacos", @role = "button" })
                @Html.ActionLink("Voltar para a lista", "Index", "", htmlAttributes: new { @class = "btn btn-tacos", @role = "button" })
            </div>
        </div>
    </div>
</div>
