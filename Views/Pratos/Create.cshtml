@model ASP.NET_Web_Application.Models.Prato

@{
    ViewBag.Title = "Create";
}

<div class="jumbotron" style="margin-top:4em">
    <h1>Cadastro de Pratos</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal form-edit-prato">
        <div class="form-group">
            <label for="formGroupExampleInput">Endereço da imagem</label>
            @Html.EditorFor(model => model.url_img, new { htmlAttributes = new { @class = "form-control", @placeholder = "URL" } })
            @Html.ValidationMessageFor(model => model.url_img, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Nome do Prato</label>
            @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome do Prato"  } })
            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Descrição do Prato</label>
            @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control",  @placeholder = "Descrição do Prato" } })
            @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Valor</label>
            @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control",  @placeholder = "R$" } })
            @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Salvar" class="btn btn-tacos" />
                @Html.ActionLink("Voltar", "Index", "", htmlAttributes: new { @class = "btn btn-tacos", @role = "button" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
