@model ASP.NET_Web_Application.Models.Prato

@{
    ViewBag.Title = "Details";
}
<h1 class="tex-tacos" style="margin: 1em 0em 0em 0em">Detalhes do Prato</h1>
<hr />

<div class="container form-edit-prato">
    <div class="row" style="margin: 0em 0em 4em 0em">
        <div class="col-md-6">
            <picture>
                <img src="@Html.DisplayFor(model => model.url_img)" class="img-fluid img-thumbnail img-tacos" alt="..." width="500">
            </picture>
        </div>
        <div class="col-md-6">
            <ul class="list-group">

                <li class="list-group-item">
                    <h4>
                        <b>IDENTIFICADOR:</b>
                        @Html.DisplayFor(model => model.id)
                    </h4>
                </li>

                <li class="list-group-item">
                    <h4>
                        <b>NOME:</b>
                        @Html.DisplayFor(model => model.nome)
                    </h4>
                </li>

                <li class="list-group-item">

                    <h4><b>DESCRIÇÃO:</b></h4>
                    @Html.DisplayFor(model => model.descricao)

                </li>

                <li class="list-group-item">
                    <h4>
                        <b>VALOR:</b> R$
                        @Html.DisplayFor(model => model.valor)
                    </h4>
                </li>

                <li class="list-group-item">

                    <h4><b>URL:</b></h4>
                    <p>@Html.DisplayFor(model => model.url_img)</p>

                </li>
            </ul>
        </div>
        <div class="form-group" style="margin: 2em 0em 0em 1em">
            <div>
                @Html.ActionLink("Editar", "Edit", new { id = Model.id }, htmlAttributes: new { @class = "btn btn-tacos", @role = "button" })
                @Html.ActionLink("Voltar para a lista", "Index", "", htmlAttributes: new { @class = "btn btn-tacos", @role = "button" })
            </div>
        </div>
    </div>
</div>